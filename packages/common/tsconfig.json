{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./build/tsconfig.tsbuildinfo",
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "dist",
    "incremental": true,
    "strict": false,
    "declarationMap": true,
    "paths": {
      "src/*": ["src/*"],
      "src": ["src"]
    }
  },
  "tsc-alias": {
    "verbose": true,
    "resolveFullPaths": true,
    "debug": true
  },
  "include": ["src/**/*"]
}
